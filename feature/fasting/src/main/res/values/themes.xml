<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_background_color</item>
        <item name="colorPrimary">@color/light_main_background_elements</item>
        <item name="colorSecondary">@color/not_full_status_bar</item>
        <item name="colorTertiary">@color/light_full_status_bar_purple</item>
        <item name="android:textColor">@color/dark_main_background_elements</item>
        <item name="colorPrimaryVariant">@color/light_water_and_products_buttons</item>
        <item name="colorSecondaryVariant">@color/not_full_circle_diagram_and_center_circle_color</item>
        <item name="colorTertiaryFixed">@color/full_status_bar_purple_blue</item>
        <item name="colorError">@color/stop_tracker_fasting_color</item>
    </style>


    <style name="LightPurpleMaterialButton" parent="@style/Widget.Material3.Button.IconButton.Outlined">
        <item name="strokeColor">?attr/android:textColor</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="strokeWidth">2dp</item>

    </style>

    <style name="DarkPurpleMaterialButton" parent="@style/Widget.Material3.Button.IconButton.Outlined">
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="backgroundTint">?attr/android:textColor</item>
        <item name="strokeWidth">2dp</item>

    </style>

    <style name="DarkBlueButton" parent="@style/Widget.Material3.Button.IconButton.Outlined">
        <item name="backgroundTint">@color/dark_water_and_products_buttons</item>
        <item name="strokeColor">@color/dark_main_background_elements</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="GreenButton" parent="@style/Widget.Material3.Button.IconButton.Outlined">
        <item name="backgroundTint">@color/start_tracker_fasting_color</item>
        <item name="strokeColor">@color/dark_main_background_elements</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="RedButton" parent="@style/Widget.Material3.Button.IconButton.Outlined">
        <item name="backgroundTint">@color/stop_tracker_fasting_color</item>
        <item name="strokeColor">@color/dark_main_background_elements</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="TransparentButton" parent="@style/Widget.Material3.Button.IconButton.Outlined">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/dark_main_background_elements</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/light_main_background_elements</item>
    </style>

</resources>