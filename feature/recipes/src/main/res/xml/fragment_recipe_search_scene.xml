<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="200">
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@+id/recipesText">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/guideline_under_page_text"
                app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
                app:layout_constraintStart_toStartOf="@id/guidelineLeft"
                app:layout_constraintTop_toTopOf="parent"
                />
            <PropertySet
                android:visibility="visible"
                android:alpha="1"
                />
        </Constraint>

        <Constraint android:id="@+id/searchTextInputLayout">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@id/guidelineLeft"
                app:layout_constraintEnd_toEndOf="@id/guidelineRight"
                app:layout_constraintTop_toBottomOf="@id/recipesText"
                app:layout_constraintBottom_toTopOf="@id/add_product_to_meal_button"
                />
        </Constraint>

        <Constraint android:id="@+id/add_product_to_meal_button">
            <Layout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/searchTextInputLayout"
                app:layout_constraintEnd_toEndOf="@id/guidelineRight"
                app:layout_constraintStart_toStartOf="@id/guidelineLeft" />
        </Constraint>

        <Constraint android:id="@+id/guidelineLeft"/>
        <Constraint android:id="@+id/guidelineRight"/>

        <Constraint android:id="@+id/recipesSelectionScrollView">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintTop_toBottomOf="@+id/add_product_to_meal_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/guidelineLeft"
                app:layout_constraintEnd_toEndOf="@id/guidelineRight"
                />
        </Constraint>

        <Constraint android:id="@+id/searchedRecipesScrollView">
            <PropertySet
                android:visibility="gone"
                android:alpha="0"
                />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@+id/recipesText">
            <PropertySet
                android:visibility="gone"
                android:alpha="0"
                />
        </Constraint>

        <Constraint android:id="@+id/searchTextInputLayout">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@id/guidelineLeft"
                app:layout_constraintEnd_toEndOf="@id/guidelineRight"
                app:layout_constraintTop_toTopOf="parent"
                />
        </Constraint>

        <Constraint android:id="@+id/add_product_to_meal_button">
            <PropertySet
                android:visibility="gone"
                android:alpha="0"
                />
        </Constraint>

        <Constraint android:id="@+id/searchedRecipesScrollView">
            <PropertySet
                android:visibility="visible"
                android:alpha="1"
                />
        </Constraint>

        <Constraint android:id="@+id/recipesSelectionScrollView">
            <PropertySet
                android:visibility="gone"
                android:alpha="0"
                />
        </Constraint>

        <Constraint android:id="@+id/guidelineLeft"/>
        <Constraint android:id="@+id/guidelineRight"/>


    </ConstraintSet>
</MotionScene>
